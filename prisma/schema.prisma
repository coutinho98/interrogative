// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Question {
  id        String   @id @default(uuid())
  optionA   String
  optionB   String
  votesA    Int      @default(0)
  votesB    Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
